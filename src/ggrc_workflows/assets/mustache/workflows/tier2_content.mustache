{{> /static/mustache/base_objects/dropdown_menu_tier2.mustache}}

<div class="tier-content">
  {{>'/static/mustache/base_objects/general_info.mustache'}}
  {{>'/static/mustache/base_objects/description.mustache'}}

  <div class="row-fluid wrap-row">
    <div class="span6">
      <h6>Frequency</h6>
      {{#if_equals instance.frequency 'one_time'}}
        One time
      {{else}}
        {{instance.frequency}}
      {{/if_equals}}
    </div>
    <div class="span6">
      <h6>Owner</h6>
      {{#with_mapping 'authorizations' instance}}
        {{#each authorizations}}
          {{#using role=instance.role}}
            {{#if_equals role.name 'WorkflowOwner'}}
              {{#using person=instance.person}}
                {{>'/static/mustache/people/popover.mustache'}}
              {{/using}}
            {{/if_equals}}
          {{/using}}
        {{/each}}
      {{/with_mapping}}
    </div>
  </div>
  <div class="row-fluid wrap-row">
    <div class="span12">
      <ggrc-gdrive-folder-picker {{^is_allowed 'update' instance}}readonly="true"{{/is_allowed}} instance="instance"/>
    </div>
  </div>
</div>
