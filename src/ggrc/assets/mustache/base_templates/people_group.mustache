<label class="people-group">
    <span {{#boldTitle}}class="people-group_title"{{/boldTitle}}>
      {{heading}}
    </span>
    {{#if editable}}
      {{#if required}}
        <span class="required">*</span>
      {{/if}}
    {{/if}}
    {{#editable}}
      {{#has_permissions}}
        {{^toggle toggle_add}}
          <span class="person-add">
            <a href="javascript://" {{toggle_button}}>
              <i class="fa fa-plus-circle"></i>
            </a>
          </span>
        {{/toggle}}
      {{/has_permissions}}
    {{/editable}}
</label>

<spinner toggle="fetchingData" size="normal"></spinner>

<ul class="inner-count-list">
  {{^if results.length}}
    <li><i> No {{type}}s</i></li>
  {{/if}}
  {{#results}}
    <li>
      <person-info person-obj=".">
        {{#has_permissions}}
          {{#can_unmap}}
            <span class="trash-control">
              <a href="javascript://" class="info-action unmap" can-click="remove_role" data-person={{id}}>
                <span class="result" {{data 'result'}}></span>
                <i class="fa fa-trash"></i>
              </a>
            </span>
          {{/can_unmap}}
        {{/has_permissions}}
      </person-info>
    </li>
  {{/results}}
  <li class="person-add">
    {{#show_add}}
      {{#has_permissions}}
        {{#toggle toggle_add}}
          <i class="fa fa-user green pull-left icon-field"></i>
          <div class="person-selector">
            <input tabindex="7" type="text" name="" class="search-icon" data-lookup="Person" placeholder="Search for {{type}}" null-if-empty="false" value="" {{autocomplete_select}} />
            <a href="javascript://" {{toggle_button}}>
              <i class="fa fa-trash"></i>
            </a>
          </div>
        {{/toggle}}
      {{/has_permissions}}
    {{/show_add}}
  </li>
</ul>
