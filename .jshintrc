{
  /*
   * PROJECT SPECIFIC
   * ================
   */
   "predef": ["GGRC", "CMS", "jQuery", "$", "_", "can"],

  // allow globals exposed by the Jasmine framework (needed for tests)
  "jasmine": true,

  /*
   * ENFORCING OPTIONS
   * =================
   */

  // Prohibit use of == and != in favor of === and !==.
  "eqeqeq": true,
  // Always put curly braces around blocks in loops and conditionals
  "curly": true,
  // Enforce tab width of 2 spaces.
  "indent": 2,
  // Prohibit use of a variable before it is defined.
  "latedef": true,
  // Require capitalized names for constructor functions.
  "newcap": true,
  // Enforce use of double quotation marks for strings.
  "quotmark": "double",
  // Prohibit use of explicitly undeclared variables.
  "undef": true,
  // Warn when variables are defined but never used.
  "unused": true,

  /*
   * RELAXING OPTIONS
   * ================
   */

  // Suppress warnings about == null comparisons.
  "eqnull": true
}
